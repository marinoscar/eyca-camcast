
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_AddItem.cshtml";
}

@section Scripts{
}


<div class="page-header">
    <h1>Enter the information for the Robot</h1>
</div>
<form id="contact-form" class="form-horizontal" method="post" action="/Contact/Add" role="form">
    @Html.Partial("_Contact")
    <div class="form-group form-group-custom">
        <label class="control-label" for="MinValue">Please enter a min value and a max value</label>
        <div class="row">
            <div class="col-xs-6">
                <input type="number" class="form-control form-control-custom" name="MinValue" id="minValueInput" placeholder="Min Value" required>
            </div>
            <div class="col-xs-6">
                <input type="number" class="form-control form-control-custom" name="MaxValue" id="maxValueInput" placeholder="Max Value" required>
            </div>
        </div>
        <span id="helpBlock" class="help-block">These values will be used by the robot to show you a surprise</span>
    </div>
    <div style="height:25px;"></div>
    <div class="form-group form-group-lg">
        <button type="submit" class="btn btn-lg btn-defaul btn-custom">Submit</button>
        <a href="/Contact/Home" class="btn btn-default btn-lg">Return</a>
    </div>
</form>


